<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Composable.Data.ORM.NHibernateRepositories.Tests"
                   namespace="Composable.Data.ORM.NHibernateRepositories.Tests.Domain">
  <class name="Order" table="[Order]">
    <id name="PersistentId">
      <generator  class="identity" />
    </id>
    <property name="Id" unique="true" />
    
    <list name="Lines" cascade="all-delete-orphan">
      <key column="OrderId" />
      <index column="LineNumber" />
      <one-to-many class="OrderLine"/>
    </list>
  </class>   
</hibernate-mapping>
